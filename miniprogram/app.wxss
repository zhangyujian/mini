page {
  background-color: #f5f6f7;
  font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', Helvetica,
    'PingFang SC', 'Hiragino Sans GB', 'Microsoft YaHei', Arial, sans-serif;
  color: #1f2933;
}

.container {
  padding: 24rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  margin: 32rpx 0 16rpx;
  color: #111827;
}

.card {
  background: #ffffff;
  border-radius: 16rpx;
  box-shadow: 0 8rpx 24rpx rgba(15, 23, 42, 0.08);
  padding: 24rpx;
  margin-bottom: 24rpx;
}

.badge {
  display: inline-block;
  padding: 4rpx 12rpx;
  border-radius: 999rpx;
  background: rgba(7, 193, 96, 0.12);
  color: #079c5c;
  font-size: 24rpx;
}

.primary-button {
  display: inline-flex;
  justify-content: center;
  align-items: center;
  background: #07c160;
  color: #ffffff;
  padding: 20rpx 32rpx;
  border-radius: 999rpx;
  font-size: 28rpx;
  box-shadow: 0 12rpx 24rpx rgba(7, 193, 96, 0.25);
  border: none;
}

.secondary-button {
  display: inline-flex;
  justify-content: center;
  align-items: center;
  background: #f1f5f9;
  color: #0f172a;
  padding: 20rpx 32rpx;
  border-radius: 999rpx;
  font-size: 28rpx;
  border: none;
}

.price {
  color: #e11d48;
  font-weight: 600;
  font-size: 32rpx;
}

.flex-row {
  display: flex;
  align-items: center;
}

.flex-between {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.flex-column {
  display: flex;
  flex-direction: column;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  border: 6rpx solid #e2e8f0;
}

.tag {
  display: inline-flex;
  align-items: center;
  padding: 6rpx 16rpx;
  background: #e0f2fe;
  color: #0369a1;
  border-radius: 999rpx;
  font-size: 24rpx;
  margin-right: 16rpx;
}

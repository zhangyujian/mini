.search-input {
  width: 100%;
  padding: 24rpx 32rpx;
  box-sizing: border-box;
  background: #f1f5f9;
  border-radius: 999rpx;
  margin: 24rpx;
  font-size: 28rpx;
}

.category-scroll {
  white-space: nowrap;
  padding: 0 24rpx 8rpx 24rpx;
}

.category-chips {
  display: inline-flex;
  gap: 20rpx;
}

.category-chip {
  padding: 16rpx 32rpx;
  border-radius: 999rpx;
  background: #e2e8f0;
  color: #475569;
  font-size: 28rpx;
}

.category-chip.active {
  background: rgba(7, 193, 96, 0.16);
  color: #047857;
}

.product-grid {
  display: grid;
  grid-template-columns: repeat(1, 1fr);
  grid-gap: 24rpx;
}

.product-card {
  background: #ffffff;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 12rpx 24rpx rgba(15, 23, 42, 0.08);
}

.product-cover {
  width: 100%;
  height: 320rpx;
  object-fit: cover;
}

.product-body {
  padding: 24rpx;
}

.product-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #111827;
}

.product-meta {
  color: #64748b;
  margin-top: 12rpx;
  font-size: 26rpx;
}

.tag-list {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
  margin-top: 16rpx;
}

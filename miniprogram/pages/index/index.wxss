.hero-card {
  position: relative;
  overflow: hidden;
  color: #ffffff;
}

.hero-card::after {
  content: '';
  position: absolute;
  inset: 0;
  background: linear-gradient(135deg, rgba(15, 23, 42, 0.75), rgba(15, 118, 110, 0.35));
}

.hero-content {
  position: relative;
  padding: 64rpx;
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.hero-title {
  font-size: 48rpx;
  font-weight: 700;
  line-height: 1.3;
}

.hero-subtitle {
  font-size: 28rpx;
  line-height: 1.7;
  opacity: 0.92;
}
